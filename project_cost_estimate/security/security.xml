<odoo>
    <!-- Groups -->
    <record id="group_project_cost_estimate_user" model="res.groups">
        <field name="name">Project Cost - User</field>
        <field name="category_id" ref="base.module_category_services_project"/>
    </record>

    <record id="group_project_cost_estimate_admin" model="res.groups">
        <field name="name">Project Cost - Admin</field>
        <field name="category_id" ref="base.module_category_services_project"/>
    </record>

    <record id="group_approval" model="res.groups">
        <field name="name">Project Cost - Approver</field>
        <field name="category_id" ref="base.module_category_services_project"/>
    </record>

    <!-- Record rules -->
    <!-- Project Users: can only read/write their created estimates -->
    <record id="rule_cost_estimate_user_own" model="ir.rule">
        <field name="name">Cost Estimates: users only own</field>
        <field name="model_id" ref="model_project_cost_estimate"/>
        <field name="domain_force">[('create_uid','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('project_cost_estimate.group_project_cost_estimate_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Project Admins: can view all estimates for projects they manage -->
    <record id="rule_cost_estimate_admin_project" model="ir.rule">
        <field name="name">Cost Estimates: admin sees projects they manage</field>
        <field name="model_id" ref="model_project_cost_estimate"/>
        <field name="domain_force">[('project_id.user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('project_cost_estimate.group_project_cost_estimate_admin'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

    <!-- Approval group: can read submitted estimates only -->
    <record id="rule_cost_estimate_approval_read_submitted" model="ir.rule">
        <field name="name">Cost Estimates: approvers read submitted</field>
        <field name="model_id" ref="model_project_cost_estimate"/>
        <field name="domain_force">[('state','=','submitted')]</field>
        <field name="groups" eval="[(4, ref('project_cost_estimate.group_approval'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>
</odoo>
